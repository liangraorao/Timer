<?xml version="1.0" encoding="UTF-8"?>
<scenes date="20110815">
<events>
 	 <event id="1" name="CreateNewRole"		disc="创建角色"/>
	 <event id="2" name="RetriveRoleName"  	disc="获取已有角色名"/>
